rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /shipments/{shipmentId}/node_comments/{commentId} {
      // Allow anyone to read (get, list) and write (create, update, delete) comments.
      // This is a temporary, permissive rule for debugging.
      allow read, write: if true;
    }
  }
}
